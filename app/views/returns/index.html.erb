<%= content_for(:title) do %>
Funai - Return Items for <%= current_user.store_number %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>RMA Log</h1>
    </div>
    <div class="search">
      <%= form_tag(returns_path, method: :get, class: "form-inline")  do %>
      <div class="form-group">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-bar",
        placeholder: "Search Aaron's item number" %>
      </div>
        <%= submit_tag("Search", class: "btn btn-default") %>
      <% end %>
    </div>
    <!-- Search display -->
    <% if params[:query].present? %>
      <table class="table table-hover">
        <tr>
          <th>Item Number</th>
          <th>Model Number</th>
          <th>RMA Status</th>
          <th>Options</th>
        </tr>
        <% @returns.each do |return_item| %>
          <tr>
            <td>
              <%= return_item.item_number %>
            </td>
            <td>
              <%= return_item.product.model_number %>
            </td>
            <td>
              <%= return_item.rma_status %>
            </td>
            <td>
              <%= link_to "Open", return_path(return_item) %>
            </td>
          </tr>
        <% end %>
      </table>
      <!-- not found -->
      <% if @returns == [] %>
        <h5>Not found</h5>
      <% end %>
    <% else %>
    <!-- display -->
    <table class="table table-hover">
      <tr>
        <th>Item Number</th>
        <th>Model Number</th>
        <th>RMA Status</th>
        <th>RMA Number</th>
        <th>Options</th>
      </tr>
    <% @returns.last(15).each do |return_item| %>
      <tr>
        <td>
          <%= return_item.item_number %>
        </td>
        <td>
          <%= return_item.product.model_number %>
        </td>
        <td>
          <%= return_item.rma_status %>
        </td>
        <td>
          <%= return_item.rma_number.nil? ? "No RMA assigned" : return_item.rma_number %>
        </td>
        <td>
          <%= link_to "Open", return_path(return_item) %>
          <% if policy(Return).destroy? %>
          <%= link_to "Delete", return_path(return_item), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </table>
    <% end %>
  </div>
</div>
  <%= link_to "Dashboard", dashboard_path, class: "btn btn-primary" %>

