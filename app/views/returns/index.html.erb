<%= content_for(:title) do %>
Funai - Return Items for <%= current_user.store_number %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>RMA Log</h1>
    </div>
    <div class="search">
      <%= form_tag(returns_path, method: :get, class: "form-inline")  do %>
      <div class="form-group">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-bar",
        placeholder: "Search Aaron's item number" %>
      </div>
        <%= submit_tag("Search", class: "btn btn-default") %>
      <% end %>
    </div>
    <!-- Search display -->
    <% if params[:query].present? %>
      <table class="table table-hover">
        <tr>
          <th>Item Number</th>
          <th>Model Number</th>
          <th>RMA Status</th>
          <th>Options</th>
        </tr>
        <% @returns.each do |return_item| %>
          <tr>
            <td>
              <%= return_item.item_number %>
            </td>
            <td>
              <%= return_item.product.model_number %>
            </td>
            <td>
              <%= return_item.rma_status %>
            </td>
            <td>
              <%= link_to "Open", return_path(return_item) %>
            </td>
          </tr>
        <% end %>
      </table>
      <!-- not found -->
      <% if @returns == [] %>
        <h5>Not found or item belongs to another user.</h5>
        <h5>For more information <%= link_to "Contact us", new_contactform_path %>.</h5>
      <% end %>
    <% else %>
    <!-- display -->

    <div class="nav nav-tabs" id="nav-id">
      <a class="navbar-wagon-link navbar-wagon-item item-over" data-toggle="tab" href="#home">
        <span>Last 15 items</span>
      </a>
      <a class="navbar-wagon-link navbar-wagon-item item-over" data-toggle="tab" href="#menu1">
        <span>Past 30 days</span>
      </a>
      <a class="navbar-wagon-link navbar-wagon-item item-over" data-toggle="tab" href="#menu2">
        <span>Past 90 days</span>
      </a>
    </div>

    <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <table class="table table-hover">
        <tr>
          <th>Item Number</th>
          <th>Model Number</th>
          <th>RMA Status</th>
          <th>RMA Number</th>
          <th>Options</th>
        </tr>
        <% @returns.limit(15).each do |return_item| %>
          <tr>
            <td>
              <%= return_item.item_number %>
            </td>
            <td>
              <%= return_item.product.model_number %>
            </td>
            <td>
              <%= return_item.rma_status %>
            </td>
            <td>
              <%= return_item.rma_number.nil? ? "No RMA assigned" : return_item.rma_number %>
            </td>
            <td>
              <%= link_to "Open", return_path(return_item) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <!-- 30 days -->
    <div id="menu1" class="tab-pane fade">
        <table class="table table-hover">
        <tr>
          <th>Item Number</th>
          <th>Model Number</th>
          <th>RMA Status</th>
          <th>RMA Number</th>
          <th>Options</th>
        </tr>
        <% @returns.thirty.each do |return_item| %>

            <tr>
              <td>
                <%= return_item.item_number %>
              </td>
              <td>
                <%= return_item.product.model_number %>
              </td>
              <td>
                <%= return_item.rma_status %>
              </td>
              <td>
                <%= return_item.rma_number.nil? ? "No RMA assigned" : return_item.rma_number %>
              </td>
              <td>
                <%= link_to "Open", return_path(return_item) %>
              </td>
            </tr>
        <% end %>
      </table>
    </div>
    <!-- 90 days -->
    <div id="menu2" class="tab-pane fade">
      <table class="table table-hover">
        <tr>
          <th>Item Number</th>
          <th>Model Number</th>
          <th>RMA Status</th>
          <th>RMA Number</th>
          <th>Options</th>
        </tr>
        <% @returns.ninety.each do |return_item| %>

            <tr>
              <td>
                <%= return_item.item_number %>
              </td>
              <td>
                <%= return_item.product.model_number %>
              </td>
              <td>
                <%= return_item.rma_status %>
              </td>
              <td>
                <%= return_item.rma_number.nil? ? "No RMA assigned" : return_item.rma_number %>
              </td>
              <td>
                <%= link_to "Open", return_path(return_item) %>
              </td>
            </tr>
           <% end %>

      </table>
    </div>
    </div>
    <% end %>
  </div>
</div>



