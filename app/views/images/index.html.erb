<%= content_for(:meta_title) do %>
Funai - Image Viewer
<% end %>
<div class="container">
  <div class="row">
    <h1 class="text-center">Image View</h1>
    <div class="search">
      <%= form_tag(images_path, method: :get, class: "form-inline")  do %>
      <div class="form-group">
        <%= date_field_tag :start_date,
        params[:query], class: "form-control search-bar" %>
        <%= date_field_tag :end_date,
        params[:query], class: "form-control search-bar" %>
      </div>
        <%= submit_tag("Search", class: "btn btn-default") %>
      <% end %>
    </div>
    <!-- Search display -->
    <% if params[:start_date].nil? %>
      <div class="container">
        <div class="row">
          <% @images.each do |my_image| %>
            <div class="my_image_view col-sm-4 col-md-6 col-offset-md-4">
              <%= cl_image_tag my_image.image, width:250, height:250 %>

            </div>
          <% end %>
        </div>
      </div>
    <% elsif @images.empty?%>
      <!-- not found -->
      <div class="col-md-4 col-offset-md-8">
        <div class="not_found">
          <span>No images found for the search</span>
        </div>
      </div>
    <% else %>
    <!-- display -->
    <div class="container">
      <div class="row">
        <% @images.each do |my_image| %>
          <div class="my_image_view col-sm-6 col-md-3">
            <%= cl_image_tag my_image.image, width:250, height:250, padding: 10 %>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
